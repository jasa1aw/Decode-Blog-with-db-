<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head.ejs') %>
    <title>Edit Blog</title>
</head>
<body>
    <%- include('partials/header.ejs') %>
    <section class="newBlog">
        <% newBlogs.forEach(newBlog => { %>
        <form class="formNewBlog" action="/api/editBlog">
            <h2>Редактировать блог</h2>
            <fieldset class="fieldset">
                <input class="input" type="text" value="<%=newBlog.title%>" required name="title" >
            </fieldset>
            <fieldset class="fieldset">
                <select  name="" id="">
                    <option selected>Выберите категорию</option>
                    <% categories.forEach(category => { %>
                        <option value=""><%= category.name %></option>
                    <%})%>
                </select>
            </fieldset>
                <button class="btnSelectAnImage button">Выберите картинку</button>
            <fieldset class="fieldset">
                <textarea rows="8" value="<%= newBlog.description %>" required name="description"></textarea>
            </fieldset>
                <button class="button" type="submit" >Изменить</button>
        </form>
        <%})%>
    </section>
    <%- include('partials/scripts.ejs') %>
</body>
</html>